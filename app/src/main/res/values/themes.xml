<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
         Primary brand color.
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
         Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
         Status bar color.
        <item name="android:statusBarColor">@color/white</item>
         Customize your theme here.
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/btn_textSize</item>
    </style>

    <style name="BtnIncreaseDecrease">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/ic_add</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="ButtonStyle2">
        <item name="android:background">@drawable/button_purple_gradient</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>